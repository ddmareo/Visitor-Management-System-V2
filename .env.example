# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# NextAuth
NEXTAUTH_SECRET="your_nextauth_secret_base64_string"
NEXTAUTH_URL="http://localhost:3000"

# Encryption Key (must be 32 bytes, base64)
NEXT_PUBLIC_ENCRYPTION_KEY="base64_encoded_32_byte_key"

# CSRF Token Secret (hex-encoded random string, recommended 64+ chars)
CSRF_SECRET="your_csrf_secret_hex_string"

# Power Automate Webhook
POWER_AUTOMATE_WEBHOOK_URL="https://your-webhook-url.com/path/to/endpoint?api-version=xxx&sp=xxx&sv=xxx&sig=xxx"

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY="your_turnstile_secret_key"
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your_turnstile_site_key"
